{% extends 'layout_1.html.twig' %}

{% block body %}
    <div class="news">
        <div class="title"> Actualités</div>
        {% for act in actualite %}
            <div class="box">
                <div class="item">
                    <div class="enteteArticle flexContent">
                        <div class="article-title">
                            <a href="javascript:void(0)">
                                <img alt="" src="http://www.fsegma.rnu.tn/images/new_icon.gif">
                                <a href="#">{{ act.titre }}</a>

                                <li>{{ act.description }}</li>
                            </a>
                        </div>
                        <div class="article-date">

                            <span class="d">{{ act.date }}</span>

                        </div>

                    </div>
                    <div class="article-body">
                        <div class="article-description">
                            <p>
                                <a href="#" class="nice small radius more_special blue button"><span>Détails</span></a>

                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

