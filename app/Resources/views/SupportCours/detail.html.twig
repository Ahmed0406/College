{% extends 'layout_2.html.twig' %}

{% block content %}

    <h2 class="pad8">Cours de {{ type }}</h2>
    {% if new %}
        <a class="new_forum"
           href="{{ path('support_cours_new', {'niveau': niveau, 'type': type}) }}">Nouveau</a>
    {% endif %}
    <ul class="listing">
        {% for cour in cours %}
            <li>
                <div class="description">
                    <div class="thumb"><a href="#"><img class="pdf_list" src="/images/pdf_icon.png" alt=""></a>
                    </div>
                    <div class="description">
                        <h6><a href="#"><span
                                        class="cufon-alt">{{ cour.nom }}</span></a></h6>
                        <a class="gray1">Taille: <em></em></a>
                    </div>

                    <div class="clear"></div>
                    <div class="info">
                        <span class="lastupdte"> Publié le:<i>{{ cour.date|date('d/m/Y') }}</i></span>
                        <a class="moreinfo"
                           href="{{ vich_uploader_asset(cour.file, 'fileFile') }}">::Télécharger</a>
                    </div>
                </div>

                <div class="clear"></div>
            </li>
        {% endfor %}
    </ul>

    <div class="pad5">
        {{ knp_pagination_render(cours) }}
    </div>
{% endblock %}
